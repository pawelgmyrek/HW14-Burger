<h1>Burgers!</h1>

<h2>Get Your Burgers Here!</h2>

<ul>
  {{#each Burgers}}
    {{#unless devoured}}
      {{> Burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers</h2>

<ul>
  {{#each Burgers}}
    {{#if devoured}}
      {{> Burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burge">Burger Name:</label>
    <input type="text" id="burge" name="name">
  </div>

  <div class="form-group">
    <label for="devoure">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Not Devoured<br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
